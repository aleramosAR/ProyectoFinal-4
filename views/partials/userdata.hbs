<div class="p-3 mb-2 bg-secondary text-white mb-5 user-box">
  <div class="bienvenida mb-3">
    <h4 class="m-0">Bienvenido <span class="text-warning text-uppercase">{{user.username}}</span></h4>
    <a href="#" style="display: block; padding-left: 1em; padding-right: 1em;" class="btn btn-warning btn-sm pd-2" onclick="return clickDesloguear()"><strong>Desloguear</strong></a>
  </div>
  <div class="card flex-row flex-wrap bg-dark text-white align-items-top">
    <div class="card-header border-0">
      <img src="/img/{{user.foto}}" class="fotoperfil" />
    </div>
    <div class="card-block px-2" style="font-size: 0.8em; padding: 1em; flex: 1;">
      <div class="row">
        <div class="col-md-6 col-lg-4">
          <p>Nombre:<br /><span class="text-white-50">{{user.username}}</span></p>
        </div>
        <div class="col-md-6 col-lg-4">
          <p>E-mail:<br /><span class="text-white-50">{{user.email}}</span></p>
        </div>
        <div class="col-md-6 col-lg-4">
          <p>Teléfono:<br /><span class="text-white-50">{{user.telefono}}</span></p>
        </div>
        <div class="col-md-6 col-lg-4">
          <p>Dirección:<br /><span class="text-white-50">{{user.direccion}}</span></p>
        </div>
        <div class="col-md-6 col-lg-4">
          <p>Edad:<br /><span class="text-white-50">{{user.edad}} años</span></p>
        </div>
        <div class="col-md-6 col-lg-4">
          <p>ADMINISTRADOR:<br /><span class="text-white-50">{{user.admin}}</span></p>
        </div>
      </div>
    </div>
  </div>
</div>