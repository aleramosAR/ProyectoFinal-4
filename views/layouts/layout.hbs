<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.7/handlebars.min.js" integrity="sha512-RNLkV3d+aLtfcpEyFG8jRbnWHxUqVZozacROI4J2F1sTaDqo1dPQYs01OMi1t1w9Y2FdbSCDSQ2ZVdAC8bzgAg==" crossorigin="anonymous"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/main.js"></script>
<style>
.productos-list { display: grid; grid-gap: 1em; grid-template-columns: repeat(1, 1fr); }
.btn-group { width: 100%; display: flex; }
.btn-group button { display: block; width: 50%; flex: 1; }
.productos-list .card { -webkit-box-shadow: 0 0 10px 0 rgba(0,0,0,0.15); -moz-box-shadow: 0 0 10px 0 rgba(0,0,0,0.15); box-shadow: 0 0 10px 0 rgba(0,0,0,0.15); }
.list-group-horizontal { flex-direction: row; width: auto!important; }
.list-group-horizontal .list-group-item { border-radius: 0!important; }

.card { border-radius: 1rem; }
.card-img-top { border-top-left-radius: calc(1rem - 1px); border-top-right-radius: calc(1rem - 1px); }
.fotoperfil { width: 100px; height: 100px; border-radius: 100%; object-fit: cover; }

.table .btn { border-radius: 100%; }

.user-box { border-radius: 0.5em; }
.user-box .bienvenida { display:flex; justify-content: space-between; }
.user-box p { margin-bottom: 0.25rem; }

.card-link { display: block; color: #000; text-decoration: none; }

@media only screen and (min-width: 480px) {
.productos-list { grid-template-columns: repeat(2, 1fr); }
}

@media only screen and (min-width: 768px) {
.productos-list { grid-template-columns: repeat(3, 1fr); }
}

@media only screen and (min-width: 1000px) {
.productos-list { grid-template-columns: repeat(4, 1fr); }
}

#mensajes { display: flex; border: 1px solid #DDD; height: 300px; padding: 1em; margin-bottom: 1em; overflow: auto; }
#mensajes .nomensajes { flex: 1; display: flex; align-items: center; justify-content: center; font-style: italic; color: #BBB; }
#mensajes .mensajes { padding: 0; flex: 1; }
#mensajes .mensajes li { font-size: 0.9em; list-style: none; margin-bottom: 1em; border-bottom: 1px solid #DDD; padding-bottom: 0.6em; }
#mensajes .mensajes li strong { font-weight: bold; color: #2113a5; }
#mensajes .mensajes li span { color: #773b19; font-size: 0.8em; }
#mensajes .mensajes li p { margin-bottom: 0; display: flex; justify-content: space-between; }
#mensajes .mensajes li .txt { color: #2d7012; font-style: italic; }

.card-img-top { width: 100%; height: 180px; object-fit: cover; border-bottom: 1px solid #DDD; }

.main-img { display: block; width: 100%; height: auto; max-width: 600px; margin: 2em auto; border: 1px solid #DDD; border-radius: 2em; }
</style>
</head>
<body>
  <header class="navbar navbar-expand-lg navbar-light text-light bg-dark mb-2">
    <div class="container justify-content-between">
      <h1 class="navbar-brand h1 mb-0 text-light">Tienda online de deportes</h1>
    </div>
  </header>
  <main class="container mb-5">
    {{{body}}}
  </main>
</body>
</html>